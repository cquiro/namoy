<!-- Form
================================================== -->
<div class="row featurette create-form">
  <div class="col-md-2"></div><!-- /.col-md-2 -->
  <div class="col-md-8">
    <div class="form-container">
    <%= form_for @partner do |f| %>
      <% if @partner.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= "#{pluralize(@partner.errors.count, "error")} stopped this recipe from being saved:" %>
          </h2>
          <ul>
            <% @partner.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <p class="notice"><%= flash[:notice] %></p>

      <h1 class="contitle">
        Distribuidor:
      </h1>

      <hr class="orange">

      <div class="form-group">
        <%= f.label :name, "Nombre", class: "lead" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :country, "PaÃ­s", class: "lead" %>
        <%= f.text_field :country, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :city, "Ciudad", class: "lead" %>
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :instagram, class: "lead" %>
        <%= f.text_area :instagram, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :facebook, class: "lead" %>
        <%= f.text_area :facebook, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :website, class: "lead" %>
        <%= f.text_area :website, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :logo, "Imagen", class: "lead" %>
        <%= f.file_field :logo, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Guardar', class: "btn btn-lg btn-primary", role: "button" %>
      </div>
    <% end %>
    </div><!-- /.form-conteiner -->
  </div><!-- /.col-md-5 -->
  <div class="col-md-2"></div><!-- /.col-md-2 -->
</div><!-- /.row -->

